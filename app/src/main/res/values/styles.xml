<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/buttonColor</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.redButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/redColor</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.blueButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/blueColor</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.greenButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/greenColor</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.yellowButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/yellowColor</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>
